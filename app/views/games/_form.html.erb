<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :my_hand %>
    <%= form.text_field :my_hand, id: :game_my_hand %>
  </div>

  <!-- 手動で入力されると困る
  ここではcom_handに値を入れている
  
  <div class="field">
    <%= form.label :com_hand %>
    <%= form.text_field :com_hand, id: :game_com_hand %>
  </div>
   -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
